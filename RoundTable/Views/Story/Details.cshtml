@model RoundTable.Models.Story

@{
    ViewData["Title"] = "Details";
}

<div class="container pt-5" style="margin-top: 4em; margin-bottom:7em">
    <div class="row justify-content-center">
        <div class="card card col-md-12 col-lg-8" style="background-color: rgba(100, 111, 88, 0.1) ">

            <div class="card-body">
                <h1 class="card-title text-center text-secondary">Details</h1>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Slug)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Slug)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StoryType.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StoryType.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NationalOutlet.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NationalOutlet.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StoryURl)
                    </dt>
                    <dd class="col-sm-10">
                        <a href="@Model.StoryURl">@Html.DisplayFor(model => model.StoryURl)</a>
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Summary)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Summary)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Sources)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Sources.Count > 0)
                        {

                            @foreach (var source in Model.Sources)
                            {
                                @source.Displayname
                                <span> </span>
                                <span> </span>
                            }
                        }

                    </dd>
                </dl>
            </div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>