@model RoundTable.Auth.Models.Credentials

@{
    ViewData["Title"] = "Login";
}


<div class="container pt-5" style="margin-top: 10em">
    <div class="row justify-content-center">
        <div class="card col-sm-12 col-md-6 col-lg-4" style="background-color: rgba(100, 111, 88, 0.1) ">
            <h1 class="text-center" style="font-size: 100px">
               
            </h1>
            <div class="card-body">
                <h2 class="card-title text-center text-secondary">Login</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <a asp-action="Register" asp-route-id="Index" class="btn btn-outline-primary mx-1" style="margin-bottom: 1em">
                REGISTER
            </a>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
