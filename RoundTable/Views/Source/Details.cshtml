@model RoundTable.Models.Source

@{
    ViewData["Title"] = "Details";
}

<div class="container pt-5" style="margin-top: 4em; margin-bottom:7em">
    <div class="row justify-content-center">
        <div class="card card col-md-12 col-lg-8" style="background-color: rgba(100, 111, 88, 0.1) ">

            <div class="card-body">
                <h1 class="card-title text-center text-secondary">Details</h1>
                <h4>@Html.DisplayFor(model => model.Displayname)</h4>
                <hr />
                <div>
                    @if (String.IsNullOrEmpty(Model.ImageLocation))
                    {
                        <img src="https://images.all-free-download.com/images/graphiclarge/man_silhouette_clip_art_9510.jpg"
                             class="rounded mx-auto d-block"
                             alt="Person"
                             style="height: 100px; width:auto" />
                    }
                    else
                    {

                        <img src="@Url.Content(@Model.ImageLocation)" class="rounded userimg" alt="Person" />

                    }
                    <a asp-controller="Image" asp-action="CreateSourceImage" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1" title="Upload Photo">
                        Upload Photo
                    </a>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Organization)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Organization)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.JobTitle)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.JobTitle)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Categories)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Categories.Count > 0)
                            {

                                @foreach (var cat in Model.Categories)
                                {
                                    @cat.Name
                                    <span> </span>
                                }
                            }

                        </dd>
                    </dl>
                </div>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>